<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="swop.config_store.view.yaml_handler.class">Swop\Bundle\ConfigStoreBundle\View\YamlViewHandler</parameter>
    </parameters>
    <services>
        <service id="swop.config_store.view.yaml_handler" class="%swop.config_store.view.yaml_handler.class%" />
        <service id="swop.config_store.view.handler" parent="fos_rest.view_handler.default">
            <call method="registerHandler">
                <argument>yaml</argument>
                <argument type="collection">
                    <argument type="service" id="swop.config_store.view.yaml_handler" />
                    <argument>createYamlResponse</argument>
                </argument>
            </call>
        </service>
    </services>
</container>
